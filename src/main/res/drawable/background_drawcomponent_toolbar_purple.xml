<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ff9c27b0" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="#ff9c27b0" />
            <corners android:radius="3dp" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="2dp" android:color="#ff9c27b0" />
            <corners android:radius="3dp" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#80ffffff" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00ffffff" />
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
</selector>
