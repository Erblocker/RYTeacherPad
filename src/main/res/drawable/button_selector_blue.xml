<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00ffffff" />
            <stroke android:width="2dp" android:color="#00bcd4" />
            <corners android:radius="6dp" />
            <padding android:left="5dp" android:top="1dp" android:right="5dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="#00ffffff" />
            <stroke android:width="2dp" android:color="#00bcd4" />
            <corners android:radius="6dp" />
            <padding android:left="5dp" android:top="1dp" android:right="5dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#8000bcd4" />
            <stroke android:width="2dp" android:color="#00bcd4" />
            <corners android:radius="6dp" />
            <padding android:left="5dp" android:top="1dp" android:right="5dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#00ffffff" />
            <stroke android:width="2dp" android:color="#4a4a4a" />
            <corners android:radius="6dp" />
            <padding android:left="5dp" android:top="1dp" android:right="5dp" android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00ffffff" />
            <stroke android:width="2dp" android:color="#4a4a4a" />
            <corners android:radius="6dp" />
            <padding android:left="5dp" android:top="1dp" android:right="5dp" android:bottom="1dp" />
        </shape>
    </item>
</selector>
