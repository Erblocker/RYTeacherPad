<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#80ffffff" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
            <stroke android:width="2dp" android:color="#808080" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#80ffffff" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
            <stroke android:width="6dp" android:color="#ff0066ff" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#80ffffff" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="20dp" />
            <stroke android:width="2dp" android:color="#ff0066ff" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
