<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e0f2f1" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <stroke android:width="0dp" android:color="#808080" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#009688" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <stroke android:width="0dp" android:color="#808080" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e0f2f1" />
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />
            <stroke android:width="0dp" android:color="#1976d2" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>
