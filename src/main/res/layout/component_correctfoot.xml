        <ImageView android:id="@+id/buttonChat" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:src="@null" />
    </LinearLayout>
    <View android:id="@+id/view1" android:background="#ffb3b3b3" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/radioCorrectArea" />
</RelativeLayout>
