<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:id="@+id/RelativeLayout1" android:background="#fff9f9f9" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/View02" android:background="#ffb3b3b3" android:layout_width="match_parent" android:layout_height="1dp" />
    <RadioGroup android:gravity="left" android:orientation="horizontal" android:id="@+id/radioCorrectArea" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp">
        <RadioButton android:id="@+id/radioCorrect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="正确" />
        <RadioButton android:id="@+id/radioHalfCorrect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="半对" />
