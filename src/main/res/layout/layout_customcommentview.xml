<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.1">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textViewMessageFrom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="张三" />
                <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#cccccc" android:id="@+id/textViewMessageTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="14:25" />
            </LinearLayout>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textViewMessageText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="5dp" android:text="消息文本" />
            <LinearLayout android:id="@+id/LinearLayoutVoice" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/imageViewVoice" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="16dp" android:src="@drawable/ic_playback" />
                <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_gravity="center_vertical" android:id="@+id/textViewTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="Small Text" />
            </LinearLayout>
            <ImageView android:id="@+id/imageViewPicture" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:src="@drawable/ic_placehold_picture" />
        </LinearLayout>
        <RelativeLayout android:id="@+id/RelativeLayout2" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="16dp">
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="center" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_above="@+id/textViewComment" android:layout_alignParentLeft="false" android:layout_alignParentTop="false" android:layout_alignParentRight="false" android:layout_alignParentBottom="false" android:layout_centerInParent="false">
                <ImageView android:id="@+id/imageViewPictureVote" android:paddingTop="2dp" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_thumbup" />
                <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#ff808080" android:gravity="center_vertical" android:id="@+id/textViewVoteCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="0" />
            </LinearLayout>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="15sp" android:textColor="#ff808080" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/textViewComment" android:paddingTop="2dp" android:layout_width="60dp" android:layout_height="28dp" android:text="评论 1" android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayoutComments" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/View01" android:background="#cccccc" android:layout_width="wrap_content" android:layout_height="1dp" />
        <View android:id="@+id/View02" android:background="#cccccc" android:layout_width="wrap_content" android:layout_height="1dp" />
        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayoutExsitComment" android:background="#f5f5f5" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <View android:id="@+id/View03" android:background="#cccccc" android:layout_width="wrap_content" android:layout_height="1dp" />
</LinearLayout>
