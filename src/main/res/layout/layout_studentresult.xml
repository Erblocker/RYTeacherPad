<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:orientation="vertical" android:background="#fff9f9f9" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/View02" android:background="#ffb3b3b3" android:layout_width="match_parent" android:layout_height="1dp" />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:gravity="left" android:orientation="horizontal" android:id="@+id/radioCorrectArea" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp">
            <RadioButton android:id="@+id/radioCorrect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="正确" />
            <RadioButton android:id="@+id/radioHalfCorrect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="半对" />
            <RadioButton android:id="@+id/radioWrong" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="错误" />
        </RadioGroup>
        <EditText android:id="@+id/editScore" android:focusable="false" android:focusableInTouchMode="false" android:visibility="invisible" android:layout_width="200dp" android:layout_height="wrap_content" android:hint="所得分" android:ems="10" />
    </LinearLayout>
    <View android:id="@+id/view1" android:background="#ffb3b3b3" android:layout_width="match_parent" android:layout_height="1dp" />
</LinearLayout>
