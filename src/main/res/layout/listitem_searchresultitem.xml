<?xml version="1.0" encoding="utf-8"?>
<com.netspace.library.ui.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:gravity="center_vertical" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
        <ImageView android:id="@+id/imageViewThumbnail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:src="@drawable/ic_folder2" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_weight="0.1">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="22sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/TextViewTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Large Text" android:maxLines="1" />
            <TextView android:textSize="18sp" android:id="@+id/TextViewSubTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="脚注" />
        </LinearLayout>
    </LinearLayout>
</com.netspace.library.ui.CheckableFrameLayout>
