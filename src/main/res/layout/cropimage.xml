<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <view android:id="@+id/image" android:background="#55000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_x="0dp" android:layout_y="0dp" class="eu.janmuller.android.simplecropimage.CropImageView" />
    <RelativeLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <Button android:id="@+id/discard" android:layout_width="80dp" android:layout_height="match_parent" android:layout_marginRight="10dp" android:text="取消" android:layout_alignParentLeft="true" style="?attr/flat_button" />
        <ImageButton android:id="@+id/rotateLeft" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="4dp" android:src="@drawable/ic_rotate_left" android:layout_toRightOf="@+id/discard" style="?attr/flat_button" />
        <ImageButton android:id="@+id/rotateRight" android:layout_width="50dp" android:layout_height="match_parent" android:layout_marginRight="4dp" android:src="@drawable/ic_rotate_right" android:layout_toRightOf="@+id/rotateLeft" style="?attr/flat_button" />
        <Button android:id="@+id/save" android:layout_width="80dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="保存" android:layout_toRightOf="@+id/rotateRight" style="?attr/flat_button" />
        <Button android:id="@+id/imageEnhance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:text="当前图像增强" android:layout_toRightOf="@+id/save" style="?attr/flat_button" />
    </RelativeLayout>
</RelativeLayout>
