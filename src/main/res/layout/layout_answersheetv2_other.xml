<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relativeControls" android:background="#fff5f5f5" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageButton android:id="@+id/imageButtonPrev" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_left" android:scaleType="fitCenter" />
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/imageButtonCamera" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_camera" android:scaleType="fitCenter" />
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/imageButtonBrush" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_brush" android:scaleType="fitCenter" />
            <ImageButton android:layout_gravity="center_vertical" android:id="@+id/imageButtonText" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_text" android:scaleType="fitCenter" />
        </LinearLayout>
        <ImageButton android:id="@+id/imageButtonNext" android:background="?attr/toolbar_button_background" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginRight="10dp" android:src="@drawable/ic_right" android:scaleType="fitCenter" android:layout_alignParentLeft="false" android:layout_alignParentTop="true" android:layout_alignParentRight="true" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/linearLayoutContent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/relativeControls" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="false" />
</RelativeLayout>
