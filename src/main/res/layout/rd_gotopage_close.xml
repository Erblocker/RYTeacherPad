<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:paddingLeft="20dp" android:paddingBottom="72dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center" android:id="@+id/rv_gotopage_relativeLayout" android:background="@drawable/rd_currentpage_background" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/rd_jumppage_previous" android:background="@drawable/rd_jumppage_previous_selecter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_centerVertical="true" />
        <LinearLayout android:id="@+id/rd_gotopage_pagenumber" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/rd_jumppage_previous">
            <TextView android:textSize="18dp" android:gravity="center" android:id="@+id/rd_gotopage_pagenumber_current" android:background="@color/ux_color_current_pageindex_background" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="./." android:singleLine="true" />
            <TextView android:textSize="18dp" android:gravity="center" android:id="@+id/rd_gotopage_pagenumber_total" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="./." android:singleLine="true" android:layout_toRightOf="@+id/rd_gotopage_pagenumber_current" />
        </LinearLayout>
        <ImageView android:id="@+id/rd_jumppage_next" android:background="@drawable/rd_jumppage_next_selecter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_toRightOf="@+id/rd_gotopage_pagenumber" android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
