<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:orientation="horizontal" android:id="@+id/cardViewClassResourceItem" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground" app:cardCornerRadius="5dp" app:cardElevation="4dp" app:cardUseCompatPadding="true" app:contentPadding="0dp">
    <RelativeLayout android:id="@+id/relativeLayoutClassResourceItem" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageViewThumbnail" android:layout_width="150dp" android:layout_height="150dp" android:layout_margin="10dp" android:src="@drawable/userinfo_background" android:scaleType="center" />
        <LinearLayout android:orientation="vertical" android:id="@+id/lineLayoutClassResourceItemMain" android:layout_width="wrap_content" android:layout_height="160dp" android:layout_toRightOf="@+id/imageViewThumbnail" android:layout_alignParentRight="true" android:layout_alignWithParentIfMissing="true">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18sp" android:textColor="#888888" android:id="@+id/textDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="正在统计数据..." />
            <TextView android:textSize="20sp" android:textColor="?android:attr/textColorPrimary" android:ellipsize="end" android:id="@+id/textTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:text="请稍候..." android:maxLines="2" android:singleLine="false" />
        </LinearLayout>
        <View android:id="@+id/viewCardLine" android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/linelayoutControls" />
        <RelativeLayout android:id="@+id/relativeLayoutPlayPos" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_below="@+id/lineLayoutClassResourceItemMain">
            <SeekBar android:id="@+id/seekBarPosition" android:layout_width="match_parent" android:layout_height="wrap_content" android:indeterminate="false" android:layout_weight="1.0" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true" />
            <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/textViewTimePass" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00:00" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" />
            <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/textViewTimeRemain" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="59:59:59" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/linelayoutControls" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_below="@+id/relativeLayoutPlayPos" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="false">
            <ImageButton android:id="@+id/buttonPlay" android:background="@drawable/background_actionbutton_click_with_rectangle_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_empty_trash" />
            <ImageButton android:id="@+id/buttonStop" android:background="@drawable/background_actionbutton_click_with_rectangle_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_empty_trash" />
            <ImageButton android:id="@+id/buttonPrev" android:background="@drawable/background_actionbutton_click_with_rectangle_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_empty_trash" />
            <ImageButton android:id="@+id/buttonNext" android:background="@drawable/background_actionbutton_click_with_rectangle_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_empty_trash" />
            <ImageButton android:id="@+id/buttonSeek" android:background="@drawable/background_actionbutton_click_with_rectangle_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_empty_trash" />
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/layoutMonitors" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/buttonScreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="22dp" android:text="1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
