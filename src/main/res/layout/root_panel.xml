<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/panel_topbar_layout" android:layout_width="match_parent" android:layout_height="@dimen/ux_toolbar_height_phone" />
    <LinearLayout android:orientation="horizontal" android:id="@+id/panel_tabbar_layout" android:layout_width="match_parent" android:layout_height="@dimen/ux_tab_height" android:layout_below="@+id/panel_topbar_layout" />
    <LinearLayout android:orientation="vertical" android:id="@+id/panel_content_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/panel_tabbar_layout">
        <android.support.v4.view.ViewPager android:id="@+id/panel_content_viewpager" android:layout_width="match_parent" android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/panel_tabbar_layout">
        <View android:background="@drawable/toolbar_shadow_top" android:layout_width="match_parent" android:layout_height="@dimen/ux_shadow_height" />
    </LinearLayout>
</RelativeLayout>
