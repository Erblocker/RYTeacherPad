<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.97">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.32">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textViewComputerScreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:layout_marginRight="30dp" android:layout_marginBottom="7dp" android:text="计算机屏幕" />
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#ffdbdbdb" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="7dp" android:text="|" />
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textViewResources" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:layout_marginBottom="7dp" android:text="备课资源" android:layout_weight="0.97" />
            </LinearLayout>
            <com.netspace.library.controls.CustomViewPager android:id="@+id/pageSelector" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="0.32" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="38dp" android:layout_marginRight="8dp">
            <ImageButton android:id="@+id/buttonMute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_volume_muted" style="@style/btnStyleBreakerBayNormal" />
            <ImageButton android:id="@+id/buttonVolumnDown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_volume_low" style="@style/btnStyleBreakerBayNormal" />
            <ImageButton android:id="@+id/buttonVolumnUp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:src="@drawable/ic_volume_high" style="@style/btnStyleBreakerBayNormal" />
            <ImageButton android:id="@+id/buttonFullScreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/ic_fullscreen" style="@style/btnStyleBreakerBayNormal" />
        </LinearLayout>
    </LinearLayout>
    <SeekBar android:id="@+id/seekBar1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginBottom="8dp">
        <ImageButton android:id="@+id/buttonPlay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_media_play" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <ImageButton android:id="@+id/buttonStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@android:drawable/ic_media_pause" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <ImageButton android:id="@+id/buttonPrev" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:src="@android:drawable/ic_media_previous" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <ImageButton android:id="@+id/buttonNext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@android:drawable/ic_media_next" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <ImageButton android:id="@+id/buttonZoomin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:src="@drawable/ic_zoomin" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <ImageButton android:id="@+id/buttonZoomout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/ic_zoomout" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
        <Button android:textSize="20sp" android:id="@+id/buttonStartQuestion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:minWidth="140dp" android:minHeight="52dp" android:text="发起做题" android:layout_weight="0.62" style="@style/btnStyleBreakerBayNormal" />
    </LinearLayout>
</LinearLayout>
