<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad" android:layout_width="match_parent" android:layout_height="60dp">
    <ImageView android:id="@+id/line" android:layout_width="match_parent" android:layout_height="1px" android:src="@color/rv_form_navigation_line" android:layout_alignParentTop="true" />
    <RelativeLayout android:id="@+id/rv_form_navigation_layout" android:background="@color/rv_form_navigation_bg" android:layout_width="match_parent" android:layout_height="59dp" android:layout_below="@+id/line">
        <ImageView android:id="@+id/rv_form_pre" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/ux_horz_left_margin_phone" android:src="@drawable/formfiller_pre" android:scaleType="center" android:layout_alignParentLeft="true" />
        <ImageView android:id="@+id/rv_form_next" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:src="@drawable/formfiller_next" android:scaleType="center" android:layout_toRightOf="@+id/rv_form_pre" />
        <TextView android:textSize="@dimen/ux_text_height_button" android:textColor="@drawable/form_navigation_button_bg_selector" android:gravity="center" android:id="@+id/rv_form_finish" android:paddingLeft="5dp" android:paddingRight="@dimen/ux_horz_right_margin_phone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/formfiller_navigation_finish" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        <TextView android:textSize="@dimen/ux_text_height_button" android:textColor="@drawable/form_navigation_button_bg_selector" android:gravity="center" android:id="@+id/rv_form_clear" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="@string/formfiller_navigation_clear" android:layout_toLeftOf="@+id/rv_form_finish" android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
