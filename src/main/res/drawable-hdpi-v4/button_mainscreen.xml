<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.netspace.teacherpad">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffe225" android:endColor="#ffe225" android:angle="90.0" />
            <stroke android:width="1dp" android:color="#3a9a0f" />
            <corners android:radius="6dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#ffe225" android:endColor="#ec6600" android:angle="270.0" />
            <stroke android:width="1dp" android:color="#3a9a0f" />
            <corners android:radius="6dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffe225" android:endColor="#ec6600" android:angle="270.0" />
            <stroke android:width="1dp" android:color="#3a9a0f" />
            <corners android:radius="6dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
